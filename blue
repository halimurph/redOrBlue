<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Knight and Princess Sword Duel</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: #000;
            font-family: Arial, sans-serif;
        }
        canvas {
            display: block;
            background: #000;
        }
    </style>
</head>
<body>
    <canvas id="canvas" width="800" height="400"></canvas>

    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');

        let animationId;
        let knightX = 50;
        let princessX = 700;
        let phase = 'running';
        let frame = 0;
        let duelTimer = 0;
        let swordClash = 0;
        let princessDefeated = false;

        // Draw shadow
        function drawShadow(x, y) {
            ctx.fillStyle = 'rgba(0, 0, 0, 0.3)';
            ctx.beginPath();
            ctx.ellipse(x, y + 32, 12, 4, 0, 0, Math.PI * 2);
            ctx.fill();
        }

        // Draw knight with sword
        function drawKnight(x, y, legOffset = 0, swordRaised = false) {
            drawShadow(x, y);
            
            // Legs (back leg)
            ctx.fillStyle = '#505050';
            ctx.fillRect(x - 4, y + 14 + legOffset, 3, 6);
            ctx.fillStyle = '#303030';
            ctx.fillRect(x - 4, y + 20 + legOffset, 4, 4);
            
            // Legs (front leg) 
            ctx.fillStyle = '#606060';
            ctx.fillRect(x + 2, y + 16 - legOffset, 3, 6);
            ctx.fillStyle = '#404040';
            ctx.fillRect(x + 2, y + 22 - legOffset, 4, 4);
            
            // Body/Torso - armor
            ctx.fillStyle = '#B0B0B0';
            ctx.fillRect(x - 6, y + 2, 12, 14);
            
            // Armor detail
            ctx.fillStyle = '#D0D0D0';
            ctx.fillRect(x - 5, y + 3, 10, 4);
            
            // Arms
            ctx.fillStyle = '#A0A0A0';
            ctx.fillRect(x - 8, y + 4, 3, 10);
            
            if (swordRaised) {
                ctx.fillRect(x + 5, y - 2, 3, 8);
            } else {
                ctx.fillRect(x + 5, y + 4, 3, 10);
            }
            
            // Shield on left arm
            ctx.fillStyle = '#2E5C8A';
            ctx.fillRect(x - 9, y + 6, 4, 7);
            ctx.fillStyle = '#FFD700';
            ctx.fillRect(x - 8, y + 8, 2, 2);
            
            // Sword
            if (swordRaised) {
                // Raised sword
                ctx.fillStyle = '#C0C0C0';
                ctx.fillRect(x + 8, y - 10, 2, 12);
                ctx.fillStyle = '#FFD700';
                ctx.fillRect(x + 7, y + 2, 4, 2);
            } else {
                // Sword at side
                ctx.fillStyle = '#C0C0C0';
                ctx.fillRect(x + 8, y + 4, 2, 10);
                ctx.fillStyle = '#FFD700';
                ctx.fillRect(x + 7, y + 14, 4, 2);
            }
            
            // Neck
            ctx.fillStyle = '#FFDAB9';
            ctx.fillRect(x - 2, y - 1, 4, 3);
            
            // Head
            ctx.fillStyle = '#FFE4C4';
            ctx.fillRect(x - 4, y - 9, 8, 9);
            
            // Hair
            ctx.fillStyle = '#8B4513';
            ctx.fillRect(x - 5, y - 10, 10, 3);
            
            // Helmet sides
            ctx.fillStyle = '#909090';
            ctx.fillRect(x - 6, y - 7, 2, 7);
            ctx.fillRect(x + 4, y - 7, 2, 7);
            
            // Plume
            ctx.fillStyle = '#DC143C';
            ctx.fillRect(x - 1, y - 12, 3, 3);
            ctx.fillRect(x, y - 13, 2, 2);
            
            // Eyes
            ctx.fillStyle = '#000';
            ctx.fillRect(x - 2, y - 5, 1, 1);
            ctx.fillRect(x + 1, y - 5, 1, 1);
        }

        // Draw princess with sword
        function drawPrincess(x, y, legOffset = 0, swordRaised = false, defeated = false) {
            drawShadow(x, y);
            
            if (defeated) {
                // Princess kneeling/sitting after defeat
                ctx.fillStyle = '#F4C2C2';
                ctx.fillRect(x - 3, y + 18, 3, 4);
                ctx.fillRect(x + 1, y + 18, 3, 4);
                
                // Dress
                ctx.fillStyle = '#FF69B4';
                ctx.fillRect(x - 7, y + 8, 14, 12);
                ctx.fillStyle = '#FF8DC7';
                ctx.fillRect(x - 6, y + 9, 5, 10);
                
                // Bodice
                ctx.fillStyle = '#FFB6D9';
                ctx.fillRect(x - 5, y + 6, 10, 6);
                
                // Arms down
                ctx.fillStyle = '#FFDAB9';
                ctx.fillRect(x - 7, y + 10, 2, 8);
                ctx.fillRect(x + 5, y + 10, 2, 8);
                
                // Neck
                ctx.fillStyle = '#FFE4C4';
                ctx.fillRect(x - 2, y + 5, 4, 2);
                
                // Head - looking down
                ctx.fillRect(x - 4, y - 3, 8, 9);
                
                // Hair
                ctx.fillStyle = '#FFD700';
                ctx.fillRect(x - 6, y - 4, 12, 8);
                ctx.fillRect(x - 5, y + 5, 10, 2);
                
                // Crown
                ctx.fillStyle = '#FFA500';
                ctx.fillRect(x - 5, y - 7, 10, 3);
                ctx.fillStyle = '#FFD700';
                ctx.fillRect(x - 4, y - 8, 2, 2);
                ctx.fillRect(x + 2, y - 8, 2, 2);
                
                // Eyes closed
                ctx.fillStyle = '#000';
                ctx.fillRect(x - 2, y + 1, 2, 1);
                ctx.fillRect(x + 1, y + 1, 2, 1);
                
                // Sword dropped on ground
                ctx.fillStyle = '#C0C0C0';
                ctx.fillRect(x + 10, y + 22, 8, 2);
                ctx.fillStyle = '#FFD700';
                ctx.fillRect(x + 10, y + 20, 2, 4);
                
            } else {
                // Normal standing princess
                ctx.fillStyle = '#F4C2C2';
                ctx.fillRect(x - 3, y + 14 + legOffset, 3, 6);
                ctx.fillStyle = '#FFD700';
                ctx.fillRect(x - 3, y + 20 + legOffset, 4, 4);
                
                ctx.fillRect(x + 1, y + 16 - legOffset, 3, 6);
                ctx.fillRect(x + 1, y + 22 - legOffset, 4, 4);
                
                // Dress
                ctx.fillStyle = '#FF69B4';
                ctx.fillRect(x - 7, y + 2, 14, 14);
                ctx.fillStyle = '#FF8DC7';
                ctx.fillRect(x - 6, y + 3, 5, 12);
                
                // Bodice
                ctx.fillStyle = '#FFB6D9';
                ctx.fillRect(x - 5, y, 10, 6);
                
                // Arms
                ctx.fillStyle = '#FFDAB9';
                if (swordRaised) {
                    ctx.fillRect(x - 7, y - 2, 2, 8);
                } else {
                    ctx.fillRect(x - 7, y + 4, 2, 8);
                }
                ctx.fillRect(x + 5, y + 4, 2, 8);
                
                // Sword
                if (swordRaised) {
                    ctx.fillStyle = '#C0C0C0';
                    ctx.fillRect(x - 10, y - 10, 2, 12);
                    ctx.fillStyle = '#FFD700';
                    ctx.fillRect(x - 11, y + 2, 4, 2);
                } else {
                    ctx.fillStyle = '#C0C0C0';
                    ctx.fillRect(x - 10, y + 4, 2, 10);
                    ctx.fillStyle = '#FFD700';
                    ctx.fillRect(x - 11, y + 14, 4, 2);
                }
                
                // Neck
                ctx.fillStyle = '#FFE4C4';
                ctx.fillRect(x - 2, y - 1, 4, 2);
                
                // Head
                ctx.fillRect(x - 4, y - 9, 8, 9);
                
                // Hair
                ctx.fillStyle = '#FFD700';
                ctx.fillRect(x - 6, y - 10, 12, 8);
                ctx.fillRect(x - 5, y - 1, 10, 2);
                
                // Crown
                ctx.fillStyle = '#FFA500';
                ctx.fillRect(x - 5, y - 13, 10, 3);
                ctx.fillStyle = '#FFD700';
                ctx.fillRect(x - 4, y - 14, 2, 2);
                ctx.fillRect(x + 2, y - 14, 2, 2);
                
                // Eyes
                ctx.fillStyle = '#000';
                ctx.fillRect(x - 2, y - 5, 1, 1);
                ctx.fillRect(x + 1, y - 5, 1, 1);
            }
        }

        // Draw sword clash effect
        function drawClash(x, y) {
            ctx.fillStyle = '#FFFF00';
            ctx.fillRect(x - 4, y, 8, 2);
            ctx.fillRect(x, y - 4, 2, 8);
            ctx.fillRect(x - 6, y - 2, 3, 2);
            ctx.fillRect(x + 3, y - 2, 3, 2);
            ctx.fillRect(x - 2, y - 6, 2, 3);
            ctx.fillRect(x - 2, y + 3, 2, 3);
        }

        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            frame++;
            const legOffset = Math.floor(Math.sin(frame * 0.3) * 2);

            if (phase === 'running') {
                knightX += 3;
                drawKnight(knightX, 180, legOffset, false);
                drawPrincess(princessX, 180, 0, false);
                
                if (knightX >= princessX - 60) {
                    phase = 'duel';
                    duelTimer = 0;
                    swordClash = 0;
                }
            } else if (phase === 'duel') {
                duelTimer++;
                
                // Sword fighting animation
                const swordUp = Math.floor(duelTimer / 15) % 2 === 0;
                
                drawKnight(knightX, 180, 0, swordUp);
                drawPrincess(princessX, 180, 0, !swordUp, false);
                
                // Clash effect when swords meet
                if (duelTimer % 15 === 7) {
                    swordClash = 5;
                }
                
                if (swordClash > 0) {
                    drawClash((knightX + princessX) / 2, 160);
                    swordClash--;
                }
                
                if (duelTimer >= 120) {
                    phase = 'victory';
                    princessDefeated = true;
                    duelTimer = 0;
                }
            } else if (phase === 'victory') {
                duelTimer++;
                
                // Knight victorious, princess defeated
                drawKnight(knightX, 180, 0, true);
                drawPrincess(princessX, 180, 0, false, true);
                
                if (duelTimer >= 90) {
                    phase = 'reset';
                }
            } else if (phase === 'reset') {
                // Reset and loop
                knightX = 50;
                princessX = 700;
                phase = 'running';
                frame = 0;
                duelTimer = 0;
                princessDefeated = false;
            }

            animationId = requestAnimationFrame(animate);
        }

        // Start automatically
        animate();
    </script>
</body>
</html>
